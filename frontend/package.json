{
  "name": "pdf-signer-using-dsc",
  "productName": "PDFSigner - Using DSC - electron + react",
  "description": "A simple PDF signer using Digital Signature Certificate (DSC) for Windows.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "set NODE_ENV=development && electron .",
    "prepackage": "taskkill /F /IM AuthPdfSigner.exe || true && npm run build",
    "package": "electron-builder"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.14",
    "axios": "^1.8.3",
    "electron-is-dev": "^3.0.1",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0"
  },
  "build": {
    "asar": false,
    "appId": "com.ram.pdfsigner",
    "productName": "PDFSigner",
    "directories": {
      "output": "release"
    },
    "extraFiles": [
      {
        "from": "electron/AuthPdfSigner.exe",
        "to": "electron/AuthPdfSigner.exe"
      },
      {
        "from": "electron/jre",
        "to": "electron/jre"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "electron/pdfSigner.exe",
      "electron/AuthSigner.js",
      "electron/keys/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "pdfsigner.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
